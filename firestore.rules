rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ================= HELPERS ================= */
    function isAuth() {
      return request.auth != null;
    }

    function userRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isTeacher() {
      return isAuth() && userRole() == "teacher";
    }

    function isClub() {
      return isAuth() && userRole() == "club";
    }

    function isStudent() {
      return isAuth() && userRole() == "student";
    }

    /* ================= USERS ================= */
    match /users/{userId} {
      // ðŸ”‘ REQUIRED so rules can read roles
      allow read: if isAuth();

      // Users can update ONLY their own profile
      allow update: if isAuth() && request.auth.uid == userId;

      // Users create their profile on signup
      allow create: if isAuth() && request.auth.uid == userId;

      allow delete: if false;
    }

    /* ================= BOOKINGS ================= */
    match /bookings/{bookingId} {
      allow read: if true;
      allow create: if isClub();
      allow update: if isTeacher();
      allow delete: if false;
    }

    /* ================= ROOMS ================= */
    match /rooms/{roomId} {
      allow read: if isAuth();
      allow create, update, delete: if isTeacher();
    }

    /* ================= REPORTS ================= */
    match /reports/{reportId} {
      allow read: if isAuth();
      allow create: if isClub();
      allow update, delete: if false;
    }

    /* ================= REGISTRATIONS ================= */
    match /registrations/{regId} {
      allow read: if true;
      allow create: if isStudent();
      allow update, delete: if false;
    }
  }
}
