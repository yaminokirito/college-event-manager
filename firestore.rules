rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ================= HELPERS ================= */
    function isAuth() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userExists() {
      return isAuth() && userDoc().exists();
    }

    function userRole() {
      return userExists() ? userDoc().data.role : null;
    }

    function isTeacher() {
      return isAuth() && userRole() == "teacher";
    }

    function isClub() {
      return isAuth() && userRole() == "club";
    }

    function isStudent() {
      return isAuth() && userRole() == "student";
    }

    /* ================= USERS ================= */
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.auth.uid == userId;
      allow update: if isAuth() && request.auth.uid == userId;
      allow delete: if false;
    }

    /* ================= BOOKINGS ================= */
    match /bookings/{bookingId} {

      allow read: if true;

      // Clubs can create bookings with required fields
      allow create: if isClub()
        && request.resource.data.keys().hasAll([
          "title",
          "room",
          "date",
          "start",
          "end",
          "status",
          "clubId",
          "clubName",
          "createdAt"
        ])
        && request.resource.data.clubId == request.auth.uid
        && request.resource.data.clubName is string;

      // Teachers approve / reject
      allow update: if isTeacher();

      allow delete: if false;
    }

    /* ================= ROOMS ================= */
    match /rooms/{roomId} {
      allow read: if isAuth();
      allow create, update, delete: if isTeacher();
    }

    /* ================= REPORTS ================= */
    match /reports/{reportId} {
      allow read: if isAuth();
      allow create: if isClub();
      allow update, delete: if false;
    }

    /* ================= REGISTRATIONS ================= */
    match /registrations/{regId} {
      allow read: if true;
      allow create: if isStudent();
      allow update, delete: if false;
    }
  }
}
